#----------------------------------------
# SGI Origin
#----------------------------------------
MACROS= -DMPI
#----------------------------------------
FFLAGS= -O2 
CPPFLAGS= $(MACROS)
PREPROCESSING = -cpp
FREEFORM= -freeform
MODULES= -I ./
LINKFLAGS= 
LIBS= -lmpi
#----------------------------------------
# scalar compiler
FC=f90
# parallel compiler
MPFC=f90
#----------------------------------------
# ... parallel linker
LINKER= f90
# ... scalar linker
#----------------------------------------

.SUFFIXES:.F

.c.o:
	$(CC) -c $(CFLAGS) $<

.f.o:
	$(FC) -c $(PREPROCESSING) $(FREEFORM) $(FFLAGS) $(MODULES) $<

.F.o:
	$(MPFC) -c $(PREPROCESSINGF) $(MPFFLAGS) $(CPPFLAGS) $(MODULES) $<
