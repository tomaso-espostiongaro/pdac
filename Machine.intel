#----------------------------------------
# Linux with Intel compiler
#----------------------------------------
#MACROS= -DMPI
MACROS= -DSCALAR
#----------------------------------------
FFLAGS= -O2 -FR -tpp5 -w90 -w95
CPPFLAGS= -fpp $(MACROS)
LINKFLAGS=
LIBS= 
#----------------------------------------
# scalar compiler
#FC=xlf
FC=ifc
# parallel compiler
MPFC=ifc
#----------------------------------------
# ... linker
LINKER= ifc

.SUFFIXES:
.SUFFIXES:.F .o .f .c

.c.o:
	$(CC) -c $(CFLAGS) $<

.f.o:
	$(FC) -c $(PREPROCESSING) $(FREEFORM) $(FFLAGS) $(MODULES) $<

.F.o:
	$(MPFC) -c $(PREPROCESSINGF) $(MPFFLAGS) $(CPPFLAGS) $(MODULES) $<
